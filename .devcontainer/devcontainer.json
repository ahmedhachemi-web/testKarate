{
    "name": "Karate Dev Environment",
    "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",
    "customizations": {
        "vscode": {
            "extensions": [
            "karatelabs.karate",
            "vscjava.vscode-java-pack",
            "formulahendry.code-runner",
            "alexkrechik.cucumberautocomplete",
            "rangav.vscode-thunder-client",
            "ayushmels.jsoncrackvscode",
            "esbenp.prettier-vscode",
            "george-alisson.html-preview-vscode",
            "ritwickdey.liveserver"
            ],
            "settings": {
                "files.associations": {
                    "*.feature": "feature"
                },
                "code-runner.executorMap": {
    "feature": "/workspaces/testKarate/run-feature.sh"
},
                "code-runner.runInTerminal": true,
                "code-runner.saveFileBeforeRun": true,
                "code-runner.clearPreviousOutput": true,
                  "code-runner.fileDirectoryAsCwd": false
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": "true"
        }
    },
    "onCreateCommand": "sdk install java 17.0.10-ms || echo 'Déjà installé'",
    "postCreateCommand": "cd karate-tests && mvn clean test -Dkarate.options='classpath:api-local.feature' -DforkCount=0 && mvn install -DskipTests && mvn clean compile" 
}